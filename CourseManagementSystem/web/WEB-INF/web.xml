<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--欢迎页面-->
    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>

    <!--登录权限过滤器-->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.imooc.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/WEB-INF/views/left.jsp</url-pattern>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <!--页面编码过滤器-->
    <filter>
        <filter-name>EncodeFilter</filter-name>
        <filter-class>com.imooc.filter.EncodeFilter</filter-class>
        <init-param>
            <param-name>encode</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--页面跳转的servlet-->
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.imooc.servlet.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/goTo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <!--登录的servlet-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.imooc.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/checkLoginInfo</url-pattern>
    </servlet-mapping>

    <!--操作管理员信息的servlet-->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.imooc.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/validateUserName</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/delUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/getAllUsers</url-pattern>
    </servlet-mapping>

    <!--操作课程信息存取的servlet-->
    <servlet>
        <servlet-name>CourseServlet</servlet-name>
        <servlet-class>com.imooc.servlet.CourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/addCourse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/getAllCourses</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/clearCourse</url-pattern>
    </servlet-mapping>

    <!--查询课程信息的servlet-->
    <servlet>
        <servlet-name>QueryCourseServlet</servlet-name>
        <servlet-class>com.imooc.servlet.QueryCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QueryCourseServlet</servlet-name>
        <url-pattern>/queryCourse</url-pattern>
    </servlet-mapping>

    <!--导入、导出课程信息的servlet-->
    <servlet>
        <servlet-name>CourseConvertServlet</servlet-name>
        <servlet-class>com.imooc.servlet.CourseConvertServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourseConvertServlet</servlet-name>
        <url-pattern>/importCourse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseConvertServlet</servlet-name>
        <url-pattern>/exportCourse</url-pattern>
    </servlet-mapping>

    <!--实现分页的servlet-->
    <servlet>
        <servlet-name>PagingServlet</servlet-name>
        <servlet-class>com.imooc.servlet.PagingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PagingServlet</servlet-name>
        <url-pattern>/paging</url-pattern>
    </servlet-mapping>

    <!--错误页面-->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/error/500.jsp</location>
    </error-page>

    <!--配置basePath-->
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/views/basePath.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.ico</url-pattern>
    </servlet-mapping>

    <!--验证码设置-->
    <servlet>
        <servlet-name>Kaptcha</servlet-name>
        <servlet-class>com.google.code.kaptcha.servlet.KaptchaServlet</servlet-class>
        <!--图片验证码的宽度-->
        <init-param>
            <param-name>kaptcha.image.width</param-name>
            <param-value>200</param-value>
        </init-param>
        <!--图片验证码的高度-->
        <init-param>
            <param-name>kaptcha.image.height</param-name>
            <param-value>50</param-value>
        </init-param>
        <!--图片验证码的边框-->
        <init-param>
            <param-name>kaptcha.border</param-name>
            <param-value>yes</param-value>
        </init-param>
        <!--图片验证码的边框颜色-->
        <init-param>
            <param-name>kaptcha.border.color</param-name>
            <param-value>blue</param-value>
        </init-param>
        <!--图片验证码的图片样式-->
        <init-param>
            <param-name>kaptcha.obscurificator.impl</param-name>
            <param-value>com.google.code.kaptcha.impl.WaterRipple</param-value>
        </init-param>
        <!--图片验证码显示的字符个数-->
        <init-param>
            <param-name>kaptcha.textproducer.char.length</param-name>
            <param-value>4</param-value>
        </init-param>
        <!--图片验证码的噪点-->
        <init-param>
            <param-name>kaptcha.noise.impl</param-name>
            <param-value>com.google.code.kaptcha.impl.DefaultNoise</param-value>
        </init-param>
        <!--图片验证码的噪点颜色-->
        <init-param>
            <param-name>kaptcha.noise.color</param-name>
            <param-value>red</param-value>
        </init-param>
    </servlet>
    <!--图片验证码的访问路径-->
    <servlet-mapping>
        <servlet-name>Kaptcha</servlet-name>
        <url-pattern>/kaptcha.jpg</url-pattern>
    </servlet-mapping>
</web-app>